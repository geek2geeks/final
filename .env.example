# QuizzTok Development Environment Variables
# Copy this file to .env and update values for your local environment

# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://quizztok:dev_password_123@localhost:5432/quizztok_dev
POSTGRES_DB=quizztok_dev
POSTGRES_USER=quizztok
POSTGRES_PASSWORD=dev_password_123

# Redis Configuration
REDIS_URL=redis://:dev_redis_123@localhost:6379
REDIS_PASSWORD=dev_redis_123

# JWT & Authentication
JWT_SECRET=dev_jwt_secret_key_change_in_production
NEXTAUTH_SECRET=dev_nextauth_secret_change_in_production
NEXTAUTH_URL=https://localhost:3000

# API Configuration
API_PORT=3001
WEB_PORT=3000
NEXT_PUBLIC_API_URL=https://localhost:3001

# External Services
VERCEL_API_TOKEN=your_vercel_token_here
CLERK_SECRET_KEY=your_clerk_secret_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# TikTok Integration
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# Development Tools
LOG_LEVEL=debug
ENABLE_DOCS=true
PLAYWRIGHT_BROWSERS_PATH=./tools/mcp-config/playwright-browsers

# MCP Configuration
CLAUDE_MCP_CONFIG=./tools/mcp-config/mcp-server-config.json

# CI/CD Deployment Variables (for GitHub Actions)
TURBO_TOKEN=your_turbo_token_here
TURBO_TEAM=your_turbo_team_here

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Heroku Deployment
HEROKU_API_KEY=your_heroku_api_key
HEROKU_EMAIL=your_heroku_email
HEROKU_PRODUCTION_APP_NAME=quizztok-api-prod
HEROKU_STAGING_APP_NAME=quizztok-api-staging