# NestJS API Environment Variables
# Copy this file to .env for local development

# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://quizztok:dev_password_123@localhost:5432/quizztok_dev

# Redis
REDIS_URL=redis://:dev_redis_123@localhost:6379

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://localhost:3000,http://localhost:3000

# Authentication
CLERK_SECRET_KEY=your_clerk_secret_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# TikTok API
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=https://localhost:3000/auth/tiktok/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Logging
LOG_LEVEL=debug

# API Documentation
ENABLE_DOCS=true
SWAGGER_PATH=docs

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads